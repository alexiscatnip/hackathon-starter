      });
    }

    function getMarkerFromGooglePlaces(place_id,type) {
      var urllandmark1 = 'http://chart.googleapis.com/chart?chst=d_map_pin_letter&chld=%7c5680FC%7c000000&.png';
      var urllandmark2 = 'http://chart.googleapis.com/chart?chst=d_map_pin_letter&chld=%7c03ff00%7c000000&.png';
      if (type == 1) { 
        var urllandmark = urllandmark1;
      } else {
        var urllandmark = urllandmark2;
      }
      
      var request = {
        placeId: place_id,
        fields: ['name', 'formatted_address', 'place_id', 'geometry']
      };
      
      var infowindow = new google.maps.InfoWindow();
      var service = new google.maps.places.PlacesService(map);

      service.getDetails(request, function(place, status) {
        if (status === google.maps.places.PlacesServiceStatus.OK) {
          var marker = new google.maps.Marker({
            map: map,
            icon: {
              url: urllandmark,
              scaledSize: new google.maps.Size(23, 33)
            },
            position: place.geometry.location
          });


          google.maps.event.addListener(marker, 'click', function() {
            infowindow.setContent('<div><strong>' + place.name + '</strong><br>' +
              //- 'Place ID: ' + place.place_id + '<br>' +
              place.formatted_address + '</div>' +
              "Food available: "+ '</div>'+ '<br />'+
              getFoodString() + '</div>');
            infowindow.open(map, this);
          });
        }
      });
    }
    
